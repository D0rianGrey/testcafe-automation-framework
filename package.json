{
  "name": "testcafe-automation-framework",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "testcafe chrome src/tests/**/*.ts",
    "test:headless": "testcafe chrome:headless src/tests/**/*.ts",
    "test:firefox": "testcafe firefox src/tests/**/*.ts",
    "test:all-browsers": "testcafe chrome,firefox src/tests/**/*.ts",
    "test:report": "testcafe chrome src/tests/**/*.ts --reporter html:reports/report.html",
    "test:parallel": "testcafe chrome src/tests/**/*.ts -c 3",
    "test:single-tab": "testcafe chrome src/tests/**/*.ts --disable-page-reloads"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "testcafe": "^3.7.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}